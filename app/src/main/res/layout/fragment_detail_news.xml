<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DetailNewsFragment">

    <include android:id="@+id/toolbarDetail" layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarDetail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNewsDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Kapolri: Motif Pembunuhan J Didalami, Jawab Isu Pelecehan atau Selingkuh"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgNewsDetailPhoto"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/news2" />

            <TextView
                android:id="@+id/tvNewsDetailWriter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Bambang"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNewsDetailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Foto Istimewa" />

            <TextView
                android:id="@+id/tvNewsDetailDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text=""
                android:justificationMode="inter_word"
                android:textColor="@color/black"
                android:textSize="16sp"
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>